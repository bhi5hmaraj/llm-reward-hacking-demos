{
  "name": "warden-dilemma-server",
  "version": "0.1.0",
  "private": true,
  "description": "Backend server for Warden's Dilemma (Colyseus + Express)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch --preserveWatchOutput\" \"nodemon --watch dist dist/index.js\"",
    "dev:tsx": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/redis-driver": "^0.15.0",
    "@colyseus/redis-presence": "^0.15.0",
    "@colyseus/schema": "^2.0.34",
    "@upstash/redis": "^1.28.0",
    "colyseus": "^0.15.15",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
